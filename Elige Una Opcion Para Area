#include <iostream>
#include "conio.h"
#include "math.h"

using namespace std;

void main()
{
   int aci, acu, atr, opcion, l, r, b, h;
   do {
		cout<<endl;
		cout << "Area de que forma geometrica desea sacar?" << endl;
		cout << "1.- Area de un Cuadrado" << endl;
		cout << "2.- Area de un Circulo" << endl;
		cout << "3.- Area de un Triangulo" << endl;
		cout << "0.- Salir" << endl;
		cout << "Elige una opcion: " ;
		cin >> opcion;
		switch (opcion) {
		 case 1:
			cout<< "Ingrese la longitud: ";
			cin>> l;
			acu = l*l;
			cout<< "El area es de: "<< acu;
			break;
			
			case 2:
				cout<< "Ingrese el radio: ";
				aci = 3.1415*(r*r);
				cout<< "El area es de: "<< aci;
				break;

				case 3:
					cout<< "Ingrese la base: ";
					cin>> b;
					cout<< "Ingrese la altura: ";
					cin>> h;
					atr = (b*h)/2;
					cout<< "El area es de: "<< atr;
					break;

						case 0:
						cout << "Salir"<<endl;break;
					default: cout << "Opcion invalida" << endl;
			}
	}while (opcion != 0);
     getch();
}
