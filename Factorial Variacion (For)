#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main()
{

	int factorial, i, n;
	//factorial es un acumulador de producto
	//i es un contador
	// n es el numero al que necesita calcular el factorial
	//validar la entrada
	factorial=1;
	do {
		cout<<"Ingrese el valor de n: ";
		cin>>n;
	}while (n<0);
	//la condicion debe contemplar los valores
	//negar la condicion correcta
	for (i=2;i<=n;i++)
		factorial = factorial*i; //acumulador de producto 
	cout<< "El factorial de "<<n<<" es: "<<factorial;
	getch();
}
