			{
				cout<<"Ingrese el nombre, numero de prestamo y monto prestado"<<endl;
				cin>>nombre;
				cin>>numprestamo;
				cin>>monto;
				montoe=montoe+monto;
				cout<<"Ingrese el proximo codigo: "<<endl;
				cin>>codigo;
				cantprestamo=cantprestamo+1;
				monto=chupacabra;
